{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://sgxanalytics.ai/schemas/pm_pitch.schema.json",
  "title": "PM Pitch v1 - Single Trade Decision",
  "description": "Portfolio Manager submits ONE trade idea (or FLAT). No instrument ranking required.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "week_id",
    "asof_et",
    "pm_model",
    "selected_instrument",
    "direction",
    "conviction",
    "horizon",
    "thesis_bullets",
    "invalidation_rule",
    "entry_plan"
  ],
  "properties": {
    "week_id": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
      "description": "Week identifier in YYYY-MM-DD format"
    },
    "asof_et": {
      "type": "string",
      "description": "ISO 8601 timestamp with ET offset"
    },
    "pm_model": {
      "type": "string",
      "minLength": 1,
      "description": "PM model identifier"
    },
    "selected_instrument": {
      "type": "string",
      "enum": ["SPY", "QQQ", "IWM", "TLT", "HYG", "UUP", "GLD", "USO", "VIXY", "SH", "FLAT"]
    },
    "direction": {
      "type": "string",
      "enum": ["LONG", "SHORT", "FLAT"]
    },
    "conviction": {
      "type": "integer",
      "minimum": -2,
      "maximum": 2
    },
    "horizon": {
      "type": "string",
      "enum": ["1W"]
    },
    "thesis_bullets": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 10,
        "maxLength": 300
      },
      "minItems": 2,
      "maxItems": 6
    },
    "indicators": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "current_value", "threshold", "condition"],
        "properties": {
          "name": { "type": "string" },
          "current_value": { "type": "number" },
          "threshold": { "type": "number" },
          "condition": { "type": "string", "enum": ["above", "below", "crosses_above", "crosses_below"] }
        }
      },
      "maxItems": 5
    },
    "invalidation_rule": {
      "type": "string",
      "minLength": 15,
      "maxLength": 500
    },
    "entry_plan": {
      "type": "object",
      "required": ["order_type", "timing", "size_pct"],
      "properties": {
        "order_type": { "type": "string", "enum": ["MARKET", "LIMIT"] },
        "timing": { "type": "string", "enum": ["MOO", "INTRADAY", "MOC"] },
        "size_pct": { "type": "number", "minimum": 0, "maximum": 1 },
        "limit_price": { "type": "number" },
        "notes": { "type": "string", "maxLength": 300 }
      }
    },
    "risk_notes": {
      "type": "string",
      "maxLength": 500
    },
    "rejected_candidates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ticker", "reason"],
        "properties": {
          "ticker": { "type": "string" },
          "reason": { "type": "string", "minLength": 10, "maxLength": 200 }
        }
      },
      "maxItems": 2
    }
  }
}
